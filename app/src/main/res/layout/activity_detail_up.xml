<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.chucksupreme.zoku.DetailNewActivity">

    <include layout="@layout/content_detail_new" />

    <android.support.design.widget.TabLayout
        android:id="@+id/activity_advance_view_pager_tablelayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/Maroon"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_detail_up_viewpager"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="350dp"></android.support.v4.view.ViewPager>
</LinearLayout>
